@model Streamverse.Models.Admin

@{
    ViewBag.Title = " ";
}
<link rel="stylesheet" href="~/Content/CSS/AdminCSS/adminLoginPage.css" />
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="~/Scripts/JS/AdminJS/adminLoginPage.js"></script>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    <div id="admin-login-form">
        <h3>Admin</h3>
        <div class="form-group">
            <input type="text" id="admin-username" name="admin-username" placeholder="Username" required />
        </div>
        <div class="form-group">
            <input type="password" id="password" name="password" placeholder="Password" required />
        </div>
        <div class="form-buttons">
            <button type="submit" id="submit-btn" onclick="signInAdmin()">Sign In</button>
        </div>
    </div>
}

