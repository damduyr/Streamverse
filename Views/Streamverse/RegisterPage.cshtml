@model Streamverse.Models.User
@if (!String.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <script type="text/javascript">alert('Error: '+@Html.Raw(Json.Encode(ViewBag.ErrorMessage)));</script>
}
@{
    ViewBag.Title = "Sign Up";
}
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<link rel="stylesheet" href="~/Content/CSS/loginRegister.css" />
@Scripts.Render("~/Scipts/JS/loginRegister.js")

@using (Html.BeginForm("RegisterPage", "Streamverse", FormMethod.Post, new { name = "UserForm", id = "UserForm" })) 
{
    
    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.First_Name, "First Name", htmlAttributes: new { @class = "control-label col-md-2" })<br />
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.First_Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.First_Name, "", new { @class = "text-danger", style = "color:white;" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Last_Name, "Last Name ", htmlAttributes: new { @class = "control-label col-md-2" })<br />
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Last_Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Last_Name, "", new { @class = "text-danger", style = "color:white;" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Email, "Email ID ", htmlAttributes: new { @class = "control-label col-md-2" })<br />
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger", style = "color:white;" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Phone_Number, "Phone Number ", htmlAttributes: new { @class = "control-label col-md-2" })<br />
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Phone_Number, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Phone_Number, "", new { @class = "text-danger", style = "color:white;" })
            </div>
        </div>
        <div class="form-group" style="padding-left:50px">
            @Html.LabelFor(model => model.DOB)<br />
            <div class="col-md-10" id="dob">
                @Html.TextBoxFor(model => model.DOB, "{0:yyyy-MM-dd}", new { style = "width:300px; padding:5px;", type="date" })
                @Html.ValidationMessageFor(model => model.DOB, "", new { @class = "text-danger", style = "color:white;" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.RegionName, "Region", htmlAttributes: new { @class = "control-label col-md-2" })<br />
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.RegionName,
        new SelectList(new List<SelectListItem>
         {
            new SelectListItem {Text="Maharashtra", Value = "Maharashtra"},
            new SelectListItem {Text="Punjab", Value = "Punjab"},
            new SelectListItem {Text="Bihar", Value = "Bihar"},
            new SelectListItem {Text="Himachal Pradesh", Value = "Himachal Pradesh"},
            new SelectListItem {Text="Gujarat", Value = "Gujarat"},
         }, "Value", "Text"), "---------Select Region---------", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Phone_Number, "", new { @class = "text-danger", style = "color:white;" })
            </div>
            </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })<br />
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Password, new {htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger", style = "color:white;" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ConfirmPassword, htmlAttributes: new { @class = "control-label col-md-2" })<br />
            <div class="col-md-10" id="pass">
                @Html.TextBoxFor(model => model.ConfirmPassword, new { style= "margin-left:-20px;height:32px;border-radius:10px;box-shadow:none;" ,@class = "form-control" })
                @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger", style = "color:white;" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Sign Up" class="btn btn-default" id="save-btn"/>
            </div>
        </div>
    </div>
}

<div style="text-align: center;padding-top: 10px;padding-bottom: 10px;">
    @Html.ActionLink("Already a Member? Sign In.", "loginPage")
</div>

@if (!String.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <script type="text/javascript">alert('Error: '+@Html.Raw(Json.Encode(ViewBag.ErrorMessage)));</script>
}