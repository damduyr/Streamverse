@model Streamverse.Models.HomePageViewModel
@if (!String.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <script type="text/javascript">alert('Error: '+@Html.Raw(Json.Encode(ViewBag.ErrorMessage)));</script>
}
@{
    ViewBag.Title = "Welcome,"+ TempData["adminName"];
}

<h2 style="text-align:center;">Movies List</h2>
<div style="overflow-x: auto; margin-top:2%;">
    <table class="table" style="text-align: center; vertical-align: middle;">
        <tr>
            <th>MovieID</th>
            <th>Title</th>
            <th>Description</th>
            <th>ReleaseDate</th>
            <th>ContentType</th>
            <th>GenreName</th>
            <th>DurationInMinutes</th>
            <th>TrailerURL</th>
            <th>PosterURL</th>
            <th>VideoUrl</th>
            <th>OverallRating</th>
            <th></th>
        </tr>

        @foreach (var item in Model.AllMovies)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MovieID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReleaseDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContentType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GenreName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DurationInMinutes)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TrailerURL)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PosterURL)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VideoUrl)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OverallRating)
                </td>
                <td>@Html.ActionLink("Edit", "EditMovieDetails", new { movieID = item.MovieID }, null)</td>
                <td>@Html.ActionLink("Delete", "DeleteMovieDetails", new { movieID = item.MovieID }, null)</td>
            </tr>
        }
    </table>
</div>
<div style="margin-left:30px;margin-top:20px;"> @Html.ActionLink("Add New Movie", "AddMovie",new {contentManagerID = (int)TempData["contentManagerID"] }) </div>
    
